@model IEnumerable<MarkedZone>

<h2>Помеченные области</h2>
@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-7"><b>Текст в вакансии</b></div>
        <div class="col-md-5"><b>Навык</b></div>
    </div>
    foreach (MarkedZone zone in Model)
    {
        <div class="row">
            <div class="col-md-7">@zone.HighlightedText</div>
            <div class="col-md-4">@zone.Skill.Name</div>
            <div class="col-md-1"><input id="@zone.Id" class="btnDelZone" type="submit" name="btnDelZone" value="Удалить" /></div>
        </div>
    }
}
else
{
    <div class="row">Нет данных</div>
}
