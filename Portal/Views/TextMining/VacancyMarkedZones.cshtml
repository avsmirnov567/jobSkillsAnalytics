@model IEnumerable<MarkedZone>

<h2>Размеченные области</h2>
@if (Model.Count() > 0)
{
    <table>
        <thead>
            <tr>
                <th><b>Текст в вакансии</b></th>
                <th><b>Навык</b></th>
            </tr>
        </thead>
        <tbody>
            @foreach (MarkedZone zone in Model)
            {
                <tr>
                    <td class="mark-cell">@zone.HighlightedText</td>
                    <td class="mark-cell">@zone.Skill.Name</td>
                    <td><input id="@zone.Id" class="btnDelZone" type="submit" name="btnDelZone" value="Удалить" /></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>Нет данных</h3>
}
